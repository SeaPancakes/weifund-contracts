{
  "name": "weifund-contracts",
  "version": "0.1.4",
  "description": "The WeiFund core contracts",
  "main": "index.js",
  "scripts": {
    "build:contracts": "dapple build",
    "build:deploy": "node ./deploy.js",
    "build:deploydebug": "node --debug-brk ./deploy.js",
    "build:browserify": "browserify --s WeiFundContracts index.js -o dist/weifund-contracts.js",
    "build": "npm run build:contracts && npm run build:deploy && npm run build:browserify",
    "test:solidity": "dapple test",
    "test:js": "tape ./contracts/**/*.js",
    "test:other": "npm run test:solidity && npm run test:js",
    "inspector": "~/.npm-global/bin/node-inspector &",
    "nodedebug": "~/.npm-global/bin/node-debug",
    "test:debug": "(killall -9 -q node; exit 0) && (sh testrpc_command.sh &) && (sleep 3s) && (~/.npm-global/bin/node-inspector &) && npm run build && sleep 3s && mocha --debug-brk ./tests/package-test.js",
    "test": "(killall -9 -q node; exit 0) && (sh testrpc_command.sh &) && (sleep 3s)  && (npm run build) && (sleep 2s)  && (mocha ./tests/package-test.js)",
    "test1": "mocha ./tests/package-test.js",
    "test:jshint": "jshint ./*.js ./tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WeiFund/weifund-contracts.git"
  },
  "keywords": [
    "weifund",
    "contracts",
    "ethereum"
  ],
  "author": "Nick Dodson <thenickdodson@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WeiFund/weifund-contracts/issues"
  },
  "homepage": "https://github.com/WeiFund/weifund-contracts#readme",
  "dependencies": {
    "bignumber.js": "^2.4.0",
    "jsonpath": "^0.2.6"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "chaithereum": "^1.4.0",
    "ethdeploy": "^0.1.2",
    "ethdeploy-cli": "0.0.5",
    "ethdeploy-provider-http": "^0.1.0",
    "ethdeploy-provider-zero-client": "^0.1.7",
    "ethereumjs-testrpc": "^2.0.8",
    "ethereumjs-tx": "^1.1.2",
    "ethereumjs-util": "^4.5.0",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "tape": "^4.6.0"
  }
}
